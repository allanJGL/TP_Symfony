{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
{% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.username }}, <a href="{{ path('logout') }}">Logout</a>
    </div>
    {% endif %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <h1>Welcome {{ user.firstname }} {{ user.lastname }} !</h1>
        {% else %}
            <h1>Welcome !</h1>
        {% endif %}


        <ul>
            {% for item in videogames %}
                <li>{{ item.id }} - {{ item.title }} - {{ item.os }} - {{ item.releaseDate|date("Y/m/d") }}</li>
                <p>{{ item.description }}</p>
                <a href="/edit/video/{{item.id}}">Modify</a>
                <a href="/delete/video/{{item.id}}">Delete</a>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
